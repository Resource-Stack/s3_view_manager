
<div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <%= render "shared/mob_header_sidebar" %>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <%= render "shared/sidebar" %>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%= render "shared/header" %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            
            <div class="main-content">
             <div class="section__content section__content--p30">
                <div class="container-fluid">
                <% if notice %>
                            <div class="col-sm-12">
                            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                                <%= notice %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            </div>
                        <% end %>
                        <% if  flash[:error] %>
                            <div class="col-sm-12">
                            <div class="alert  alert-danger alert-dismissible fade show" role="alert">
                                <%= flash[:error] %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            </div>
                        <% end %>
                <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                           <li class="breadcrumb-item" > <a href='<%= bucket_list_path %>'><i class="fas fa-home"> Home</i></a></li>
                                           <li class='breadcrumb-item' > <a href='<%= users_path %>'>Users </a> </li>
                                           <li class='breadcrumb-item' aria-current='page'> Profile  </li>
                                        </ol>
                                    </nav>
                        <div class="col-lg-12">
                        <% if @S3Config.errors.any? %>
                            <div id="error_explanation">
                            <h2><%= pluralize(@S3Config.errors.count, "error") %> prohibited this user from being saved:</h2>
                            <ul>
                                <% @S3Config.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                                <% end %>
                            </ul>
                            </div>
                        <% end %>
                        <div class="card">
                            <div class="card-header">
                            <strong> Profile</strong>
                            </div>
                            <div class="card-body card-block">
                            <%= form_for :S3Config, url: profile_post_path, method: :post do |form|%>
                            <input  type="hidden" value="<%= @S3Config.id %>" name="id" id="S3Config_id">
                                <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Name </label></div>
                                <div class="col-12 col-md-9">
                                    <%= form.text_field :account_name ,class: 'form-control' ,placeholder: 'Enter Name' %>
                                    <small class="form-text form-tex">Please enter account name</small>
                                </div>
                                </div>
                                <div class="row form-group">
                                <div class="col col-md-3"><label for="email-input" class=" form-control-label">	Account ID</label></div>
                                <div class="col-12 col-md-9">
                                    <%= form.text_field :account_id,class: 'form-control' , placeholder: 'Enter Email'  %>
                                    <small class="help-block form-text">Please enter account id</small>
                                </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="email-input" class=" form-control-label">Access key</label></div>
                                    <div class="col-12 col-md-9">
                                        <%= form.text_field :access_key, class: 'form-control' , placeholder: 'Enter Phone'  %>
                                        <small class="help-block form-text">Please enter the access key</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="email-input" class=" form-control-label">Secret key</label></div>
                                    <div class="col-12 col-md-9">
                                        <%= form.text_field :secret_key, class: 'form-control' , placeholder: 'Enter Phone'  %>
                                        <small class="help-block form-text">Please enter the secret key</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="email-input" class=" form-control-label">Region</label></div>
                                    <div class="col-12 col-md-9">
                                        <%= form.text_field :region, class: 'form-control' , placeholder: 'Enter Phone'  %>
                                        <small class="help-block form-text">Please enter the region</small>
                                    </div>
                                </div>
                                 <div class="row form-group">
                                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Filter tag </label></div>
                                    <div class="col-12 col-md-9">
                                        <%= form.text_field :filter_tag ,class: 'form-control' ,placeholder: 'Enter Filter tag' %>
                                        <small class="form-text form-tex">Please enter filter tag</small>
                                    </div>
                                </div>
                                
                                
                                
                                <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <a href="<%= profile_url %>" class="btn btn-secondary btn-sm">
                                    <i class="fa  fa-step-backward"></i> Back
                                </a>
                                </div>
                            <% end %>
                            </div>
                        </div>
                        </div>
                <%= render "shared/footer" %>
            </div>
            </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>
</div>
